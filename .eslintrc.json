{
  "extends": ["airbnb-base", "eslint:recommended",  "plugin:react/recommended", "plugin:jest-dom/recommended", "plugin:testing-library/react"],
  "plugins": ["simple-import-sort", "eslint-plugin-import-order-alphabetical", "testing-library", "jest-dom"],
  "parserOptions": {
    "project": "./jsconfig.json",
    "sourceType": "module"
  },
  "overrides": [
    {
      // 3) Now we enable eslint-plugin-testing-library rules or preset only for matching files!
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
      "extends": ["plugin:testing-library/react"]
    }
  ],
  "rules": {
    "linebreak-style": 0,
    "import/prefer-default-export": "off",
    "no-console": "off",
    "react/prop-types": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "react/react-in-jsx-scope": "off",
    "max-classes-per-file": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": "off",
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "no-unused-expressions": "off",
    "import/no-unresolved": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "no-param-reassign": "off"
  }
}
